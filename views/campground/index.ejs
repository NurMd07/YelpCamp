<% layout('../layouts/boilerplate') %>

<h3 class="text-center h5 fw-bold ">All Campgrounds</h3>
<% for(let campground of campgrounds){ %>
    
    <div class="card mb-3 mx-md-1 pb-0 mt-4">
<div class="row">
 
<div class="col-md-4 d-flex">
<img class="img-fluid" src="<%=campground.image%>" alt="error loading image">
</div>
<div class="col-md-8">
<div class="card-body">
    <h5 class="card-title"><%=campground.name%></h5>
    <p class="card-text"><%=campground.description%></p>
    <p class="card-text text-muted"><%=campground.location%></p>
    <a class="btn btn-primary btn-sm" href="/campgrounds/<%=campground._id%>">View More</a>
</div>

</div>

</div>
</div>
<% } %>
