<% layout('../layouts/boilerplate') %>

<div class="row justify-content-center mt-2 mb-5">
  <div class="col-md-6">
<div class="card">
    <img class="card-img-top img-fluid" style="max-height:50vh;" src="<%=camp.image%>" alt="Error Loading Image">
    <div class="card-body">
      <h5 class="card-title"><%= camp.name  %></h5>
      <p class="card-text"><%=camp.description%></p>
      
    </div>
    <ul class="list-group list-group-flush">
      <li class="list-group-item text-muted"><%= camp.location  %></li>
      <li class="list-group-item">$<%= camp.price%>/night</li>
    </ul>
    <div class="card-body text-center my-2">
      <a class="btn btn-info text-light card-link px-3 " href="/campgrounds/<%= camp._id%>/edit">Edit</a>
<form class="d-inline" action="/campgrounds/<%=camp._id%>?_method=DELETE" method="POST">
  <button class="btn btn-danger card-link ms-2">Delete</button>
</form>
    </div>
    <div class="card-footer bg-secondary" style="font-size:0.8em">
      <span class="text-white">Not Sure? <a class="text-warning" href="/campgrounds"> Find Out More!</a></span>
    </div>
  </div>
</div>
</div>


