<script>
  function validURL(str) {
    var res = str.match(/(http(s)?:\/\/.)?(www\.)?[-a-zA-Z0-9@:%._\+~#=]{2,256}\.[a-z]{2,6}\b([-a-zA-Z0-9@:%_\+.~#?&//=]*)/g);
  return (res !== null)
}
    (function () {
      'use strict'
    
     
     let forms = document.querySelectorAll('.needs-validation');
     if(document.getElementById('image')){
      let image=document.querySelector('#image');
   image.addEventListener('input',function(e){
    if(image.nextElementSibling){
      image.nextElementSibling.style.display = 'none';
    }
      
    })
     }

      // Loop over them and prevent submission
      Array.from(forms)
        .forEach(function (form) {
          form.addEventListener('submit', function (event) {
            if (!form.checkValidity() || !validURL(form.querySelector('#image').value)) {
              event.preventDefault()
              event.stopPropagation();
              let img = form.querySelector('#image');
              // img.classList.add('is-invalid');
              img.classList.remove('is-valid');
              img.classList.add('is-invalid');
              img.nextElementSibling.style.display = 'block'
              if(validURL(form.querySelector('#image').value)){
                img.classList.add('is-valid');
                img.classList.remove('is-invalid');
                img.nextElementSibling.style.display = 'none'
              }
            }
    
            form.classList.add('was-validated')
          }, false)
        })
    })()
    </script>


